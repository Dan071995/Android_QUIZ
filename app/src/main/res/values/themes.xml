<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skillbox_hw_quiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Убираем ActionBar из данной темы. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#82b1ff</item>
        <item name="colorPrimaryVariant">#4d82cb</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/welcomeViewBackgroundColor</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/opensans_medium</item>
    </style>
</resources>